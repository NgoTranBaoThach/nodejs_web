<div class="mt-4">
    <form method="post" action="">
        <div class="form-group">
            <label for="search-input" class="form-label">Keyword</label>
            <input type="text" name="keyword" class="form-control" id="search-input" placeholder="Enter a keyword">
        </div>

        <div class="form-group">
            <label for="gender-input" class="form-label">Gender</label>
            <select name="gender" class="form-control" id="gender-input">
                <option value="">-- Choose Gender --</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>